@model  List<Web.Models.Drivers>
@using PagedList.Mvc;

    <!-- header logo: style can be found in header.less -->
    <div class="wrapper row-offcanvas row-offcanvas-left" style="margin-left: 15px; margin-top: -50px">

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Search Drivers
                </h1>
                <ol class="breadcrumb">
                    <li><a href="~/Home/Inicio"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active">Drivers</li>
                    <li class="active">Search</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <div class="col-md-6">
                        <!-- /.box --><!-- /.box -->
                    </div><!-- /.col -->
                    <div class="col-md-6">
                        <!-- /.box --><!-- /.box -->
                    </div><!-- /.col -->
                </div>

        

                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">
                                    <img id="Right" onclick="showHide('menu'); return false;" src="~/Content/Imagens/RightArrow.png" />
                                    <img id="Down" onclick="showHide('menu'); return false;" src="~/Content/Imagens/DownArrow.png" style="display: none" />
                                    Filters
                                </h3>
                                <div class="box-tools">
                                    <div style="float: right;">
                                        @*<form action="~/MARKETING/Create"><button type="submit" class="btn btn-primary">Novo</button></form>*@
                                    </div>
                                </div>
                            </div><!-- /.box-header -->
                            @using (Ajax.BeginForm("Pesquisa", "Driver", new AjaxOptions
                            {
                                HttpMethod = "GET",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "_PartialMarketing"

                            }))
                            {
                                <div class="row" id="menu" style="display: none;">
                                    <!-- accepted payments column -->
                                    <div class="col-xs-6">
                                        <div role="form">
                                            <div class="box-body">
                                                <div class="form-group">
                                                    <label>OA</label>
                                                    @Html.TextBox("OAmin", "", htmlAttributes: new { @class = "form-control" })
                                                    @Html.TextBox("OAmax", "", htmlAttributes: new { @class = "form-control" })
                                                </div>                                               
                                                <div class="form-group">
                                                    <label>TAL</label>
                                                    @Html.TextBox("TALmin", "", htmlAttributes: new { @class = "form-control" })
                                                    @Html.TextBox("TALmax", "", htmlAttributes: new { @class = "form-control" })
                                                </div>                                                
                                                <div class="form-group">
                                                    <button class="btn btn-primary" id="pesquisar" onclick="showHide('menu');">Search</button>
                                                </div>

                                            </div><!-- /.box-body -->
                                        </div>
                                    </div><!-- /.col -->
                                    <div class="col-xs-6">
                                        <form role="form">
                                            <div class="box-body">
                                                <div class="form-group">
                                                    <label>CON</label>
                                                    @Html.TextBox("CONmin", "", htmlAttributes: new { @class = "form-control" })
                                                    @Html.TextBox("CONmax", "", htmlAttributes: new { @class = "form-control" })
                                                </div>
                                                <div class="form-group">
                                                    <label>STA</label>
                                                    @Html.TextBox("STAmin", "", htmlAttributes: new { @class = "form-control" })
                                                    @Html.TextBox("STAmax", "", htmlAttributes: new { @class = "form-control" })
                                                </div>
                                            </div><!-- /.box-body -->
                                        </form>
                                    </div><!-- /.col -->
                                </div><!-- /.row -->
                            }
                        </div><!-- /.Fim dos Filtros<-->
                    </div>
                </div>
                <div id="_PartialMarketing">
                    @Html.Partial("_PartialMarketing", Model)
                </div>
            </section><!-- /.content -->
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->
    @section scripts
    {

        <script type="text/javascript">
            function showHide(obj) {
                var div = document.getElementById(obj);
                if (div.style.display == 'none') {
                    div.style.display = '';
                    document.getElementById('Down').style.display = '';
                    document.getElementById('Right').style.display = 'none';
                }
                else {
                    div.style.display = 'none';
                    document.getElementById('Down').style.display = 'none';
                    document.getElementById('Right').style.display = '';
                }
            }
        </script>





    }